<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <properties resource="application.properties"/>
    <context id="DB2Tables" targetRuntime="MyBatis3">

        <commentGenerator>
            <property name="suppressDate" value="false" />
            <property name="addRemarkComments" value="false" />
            <property name="suppressAllComments" value="true" />
        </commentGenerator>

        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/sampledb?useSSL=false"
                        userId="${spring.datasource.username}"
                        password="${spring.datasource.password}">
        </jdbcConnection>

        <javaTypeResolver >
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>

        <javaModelGenerator targetPackage="kim.xiaom.blog.entity.dataObjects" targetProject="src/main/java">
            <property name="enableSubPackages" value="true" />
            <property name="trimStrings" value="true" />
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="mappers"  targetProject="src/main/resources">
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>

        <javaClientGenerator type="XMLMAPPER" targetPackage="kim.xiaom.blog.dao"  targetProject="src/main/java">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>

        <table schema="user" tableName="blog_user" domainObjectName="User" >
            <property name="useActualColumnNames" value="false"/>
        </table>
        <table schema="tag" tableName="blog_tag" domainObjectName="Tag" >
            <property name="useActualColumnNames" value="false"/>
        </table>
        <table schema="post" tableName="blog_post" domainObjectName="Post" >
            <property name="useActualColumnNames" value="false"/>
        </table>
        <table schema="category" tableName="blog_category" domainObjectName="Category" >
            <property name="useActualColumnNames" value="false"/>
        </table>
        <table schema="comment" tableName="blog_comment" domainObjectName="Comment" >
            <property name="useActualColumnNames" value="false"/>
        </table>
    </context>
</generatorConfiguration>